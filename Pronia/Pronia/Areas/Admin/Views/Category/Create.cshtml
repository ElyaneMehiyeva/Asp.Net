@model Category
@{
    ViewData["Title"] = "Admin Panel - Create Category";
}
<div class="col-lg-12 col-xlg-12 col-md-12">
    <div class="card">
        <div class="card-body">
            <form method="post" class="form-horizontal form-material">
                <div class="form-group mb-4">
                    <label asp-for="Name" class="col-md-12 p-0">Category Name</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Name"  class="form-control p-0 border-0">
                    </div>
                    <span asp-validation-for="Name" style="color:darkred;"></span>
                </div>
              
              
                <div class="form-group mb-4">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">
                            Create
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
