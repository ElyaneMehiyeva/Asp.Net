@model Slider
@{
    ViewData["Title"] = "Admin Panel - Create Slider";
}
<div class="col-lg-12 col-xlg-12 col-md-12">
    <div class="card">
        <div class="card-body">
            <form method="post" class="form-horizontal form-material">
                <div class="form-group mb-4">
                    <label asp-for="Name" class="col-md-12 p-0">Title</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Name"  class="form-control p-0 border-0">
                    </div>
                    <span asp-validation-for="Name" style="color:darkred;"></span>
                </div>
               <div class="form-group mb-4">
                    <label asp-for="Percent" class="col-md-12 p-0">Discount Percent</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Percent"  class="form-control p-0 border-0">
                    </div>
                </div>
               <div class="form-group mb-4">
                    <label asp-for="Image" class="col-md-12 p-0">Image Path</label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Image" class="form-control p-0 border-0">
                    </div>
                     <span asp-validation-for="Image" style="color:darkred;"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Description" class="col-md-12 p-0">Description</label>
                    <div class="col-md-12 border-bottom p-0">
                        <textarea asp-for="Description" rows="5" class="form-control p-0 border-0"></textarea>
                    </div>
                </div>
               
                <div class="form-group mb-4">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success">
                            Create
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>