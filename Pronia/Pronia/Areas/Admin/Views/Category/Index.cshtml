@model List<Category>
@{
    ViewData["Title"] = "Admin Panel - Category";
}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title">Categories</h3>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new category</a>
            <div class="table-responsive">
                <table class="table text-nowrap">
                    <thead>
                        <tr>
                            <th class="border-top-0">#</th>
                            <th class="border-top-0">Name</th>
                           
                            <th class="border-top-0"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category item in Model)
                       {
                            <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            
                            <td>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit  <i class="fas fa-pencil-alt"></i></a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete <i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                       }
                       
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
