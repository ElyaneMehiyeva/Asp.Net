@using Portfolio.Models
@model List<Social>

@{
    ViewData["Title"] = "Social";
}

<a class="btn btn-primary mb-3" asp-controller="Social" asp-action="Create">
    Add new Icon
</a>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Social</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Icon</th>
                        <th>Link</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Social item in Model)
                     {  
                        <tr>
                            <td>@Html.Raw(item.Icon)</td>
                            <td>@item.Link</td>
                            <td>
                                @*<button class="btn btn-success">Edit</button>*@
                                <a asp-controller="Social" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                     }

                </tbody>

            </table>
        </div>
    </div>
</div>




