<!doctype html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/css/mobile.css">
    <script src="~/js/mobile.js" type="text/javascript"></script>
</head>
<body>
    <div id="page">
        <div id="header">
            <div>
                <a asp-controller="Home" asp-action="Index" class="logo"><img src="~/images/logo.png" alt=""></a>
                <ul id="navigation">
                    <li class="selected">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="menu">
                        <a asp-controller="About" asp-action="Index">About</a>
                        <ul class="primary">
                            <li>
                                <a asp-controller="Product" asp-action="Index">Product</a>
                            </li>
                        </ul>
                    </li>
                    <li class="menu">
                        <a asp-controller="Blog" asp-action="Index">Blog</a>
                        <ul class="secondary">
                            <li>
                                <a asp-controller="SinglePost" asp-action="Index">Single post</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
        @RenderBody()
        <div id="footer">
            <div>
                <div class="connect">
                    <a href="http://freewebsitetemplates.com/go/facebook/" class="facebook">facebook</a>
                    <a href="http://freewebsitetemplates.com/go/twitter/" class="twitter">twitter</a>
                    <a href="http://freewebsitetemplates.com/go/googleplus/" class="googleplus">googleplus</a>
                    <a href="http://pinterest.com/fwtemplates/" class="pinterest">pinterest</a>
                </div>
                <p>&copy; 2023 Freeeze. All Rights Reserved.</p>
            </div>
        </div>
    </div>
</body>
</html>
