@model List<Product>
@{
    ViewData["Title"] = "Admin Panel - Product";
}
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title">Products</h3>
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create new product</a>
            <div class="table-responsive">
                <table class="table text-nowrap">
                    <thead>
                        <tr>
                            <th class="border-top-0">#</th>
                            <th class="border-top-0">MainPhoto</th>
                            <th class="border-top-0">Name</th>
                            <th class="border-top-0">Description</th>
                            <th class="border-top-0">Price</th>
                            <th class="border-top-0">Raiting</th>
                            <th class="border-top-0">StockCount</th>
                            <th class="border-top-0">Category</th>
                            <th class="border-top-0">Colors</th>

                            <th class="border-top-0"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product item in @Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <img style="width:100px; height:70px;object-fit:contain;" src="~/files/@item.ProductImages.FirstOrDefault(i=>i.IsMain==true).Source" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>$@item.Price</td>
                                <td>@item.Raiting</td>
                                <td>@item.StockCount</td>
                                <td>@item.Category.Name</td>
                                <td>
                                    @foreach (ProductColor inner in item.ProductColors)
                                    {
                                        @inner.Color.Name <br />
                                    }

                                </td>

                                <td>
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit  <i class="fas fa-pencil-alt"></i></a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete <i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
